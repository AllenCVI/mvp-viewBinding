<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipChildren="false"
    >

    <ImageView
        android:id="@+id/iv_backUp"
        android:layout_width="18dp"
        android:layout_height="14dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/back_up_img"
        />


    <TextView
        android:id="@+id/tv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="@string/vip"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/iv_backUp"
        />


    <com.youth.banner.Banner xmlns:banner="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_below="@+id/tv_vip"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="13dp"
        banner:banner_radius="15dp"
        banner:banner_indicator_normal_color="@color/m80_3"
        banner:banner_indicator_selected_color="@color/white"
        />



    <LinearLayout
        android:id="@+id/ll_selectVipTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/banner"
        android:layout_marginTop="50dp"
        android:clipChildren="false"
        >

        <FrameLayout
            android:id="@+id/fl_MVPTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="169dp"
            android:layout_marginHorizontal="3dp"
            android:clipChildren="false"
            >

            <View
                android:id="@+id/view_selectVipTime_bgBottom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_select_vip_time_bottom_bg_vip_act"
                />

            <View
                android:id="@+id/view_selectVipTime_bgMiddle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_select_vip_time_middle_bg_vip_act"
                android:visibility="gone"
                />

            <View
                android:id="@+id/view_selectVipTime_bgTop"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/shape_select_vip_time_top_bg_vip_act"
                />

            <ImageView
                android:id="@+id/iv_bigPineapple"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="-13dp"
                android:src="@drawable/big_pineapple_img_vip_act"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_selectFirstVipTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="43dp"
                android:text="@string/m1Month_VIP"
                />

            <TextView
                android:id="@+id/tv_discountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limited time"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:background="@drawable/shape_discount_label_vio_act"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="68dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="8dp"
                />

            <TextView
                android:id="@+id/tv_selectVIPMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹199"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="27dp"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_selectVIPMoneyMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹199/Month"
                android:textColor="@color/b4_3"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:textSize="13sp"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_MVPTime1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="169dp"
            android:layout_marginHorizontal="3dp"
            android:clipChildren="false">

            <View
                android:id="@+id/view_selectVipTime_bgBottom1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_select_vip_time_bottom_bg_vip_act"
                />

            <View
                android:id="@+id/view_selectVipTime_bgMiddle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_select_vip_time_middle_bg_vip_act"
                />

            <View
                android:id="@+id/view_selectVipTime_bgTop1"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/shape_select_vip_time_top_bg_vip_act"
                />


            <ImageView
                android:id="@+id/iv_bigPineapple1"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="-13dp"
                android:src="@drawable/big_pineapple_img_vip_act"
                />

            <TextView
                android:id="@+id/tv_selectSecondVipTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="43dp"
                android:text="@string/m3Month_VIP"
                />


            <TextView
                android:id="@+id/tv_discountLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:background="@drawable/shape_discount_label_vio_act"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="68dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="8dp"
                />

            <TextView
                android:id="@+id/tv_selectVIPMoney1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹489"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="27dp"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_selectVIPMoneyMonthly1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹163/Month"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:textSize="13sp"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_MVPTime2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="169dp"
            android:layout_marginHorizontal="3dp"
            android:clipChildren="false"
            >

            <View
                android:id="@+id/view_selectVipTime_bgBottom2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_select_vip_time_bottom_bg_vip_act"
                />

            <View
                android:id="@+id/view_selectVipTime_bgMiddle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_select_vip_time_middle_bg_vip_act"
                android:visibility="gone"
                />

            <View
                android:id="@+id/view_selectVipTime_bgTop2"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/shape_select_vip_time_top_bg_vip_act"
                />

            <ImageView
                android:id="@+id/iv_bigPineapple2"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="-13dp"
                android:src="@drawable/big_pineapple_img_vip_act"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_selectThirdVipTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="43dp"
                android:text="@string/m12Month_VIP"
                />

            <TextView
                android:id="@+id/tv_discountLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special offer"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:background="@drawable/shape_discount_label_vio_act"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="68dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="8dp"
                />

            <TextView
                android:id="@+id/tv_selectVIPMoney2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹499"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="27dp"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_selectVIPMoneyMonthly2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹41/Month"
                android:textColor="@color/b4_3"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:textSize="13sp"
                />

        </FrameLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bt_Continue"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:text="@string/Continue"
        android:textColor="@color/white"
        android:background="@drawable/shape_bt_registration_entrance"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        />


</RelativeLayout>