<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:text="@string/MineStr"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_notify"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/shape_system_notify_mine_fg" />

    <View
        android:id="@+id/iv_notifyCircle"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignRight="@+id/iv_notify"
        android:layout_marginTop="9dp"
        android:background="@drawable/shape_circle_system_notify_mine_fg" />

    <ImageView
        android:id="@+id/iv_headerImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <ImageView
        android:id="@+id/iv_headerCamera"
        android:layout_width="19dp"
        android:layout_height="14dp"
        android:layout_alignRight="@+id/iv_headerImg"
        android:layout_alignBottom="@+id/iv_headerImg"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/camera_mine_fg" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_headerImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="anmy"
        android:textColor="@color/mEBF9FF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:drawableRight="@drawable/edit_signature_mine_fg"
        android:drawablePadding="4dp"
        android:text="Miss you so much~"
        android:textColor="@color/mEBF9FF"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/ll_member"
        android:layout_width="155dp"
        android:layout_height="88dp"
        android:layout_below="@+id/tv_signature"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_ll_member_mine_fg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_member"
            android:layout_width="41dp"
            android:layout_height="29dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/member_img_mine_fg" />

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/MemberStr"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_diamonds"
        android:layout_width="155dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/ll_member"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_ll_member_mine_fg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_diamonds"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/diamonds_img_mine_fg" />

        <TextView
            android:id="@+id/tv_diamonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/DiamondsStr"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_member"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_ll_member_mine_fg">

        <RelativeLayout
            android:id="@+id/rl_visitors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            >

            <ImageView
                android:id="@+id/iv_visitors"
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginVertical="21dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/visitors_img_mine_fg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_visitors"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:text="@string/VisitorsStr"
                android:textSize="13sp"
                android:textColor="@color/mF6F6F6"
                />
            
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/forward_img_mine_fg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/iv_visitors"
                android:background="@color/m242732"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_below="@+id/rl_visitors"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_gifts"
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginVertical="21dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/gifts_img_mine_fg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_gifts"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:text="@string/giftsStr"
                android:textSize="13sp"
                android:textColor="@color/mF6F6F6"
                />

            <ImageView
                android:id="@+id/iv_forward"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/forward_img_mine_fg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_giftNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/mF23D9B"
                android:text="@string/m0"
                android:layout_toLeftOf="@+id/iv_forward"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/iv_gifts"
                android:background="@color/m242732"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_couple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_below="@+id/rl_gifts"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_couple"
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginVertical="21dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/couple_img_mine_fg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_couple"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:text="@string/coupleStr"
                android:textSize="13sp"
                android:textColor="@color/mF6F6F6"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/forward_img_mine_fg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/iv_couple"
                android:background="@color/m242732"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_below="@+id/rl_couple"
            >

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginVertical="21dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/setting_img_mine_fg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_setting"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:text="@string/settingStr"
                android:textSize="13sp"
                android:textColor="@color/mF6F6F6"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/forward_img_mine_fg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>